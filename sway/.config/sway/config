# Global variables
set {
  $left h
  $right l
  $up k
  $down j

  $cursor "Catppuccin-Teal-Cursors"
  $font_name "Noto Sans"
  $font_size 12

  $mod Mod4
  $term alacritty
  $action ~/.local/bin/sway_action
  $launcher ~/.local/bin/app_launcher
  $window_picker ~/.local/bin/window_picker
  $wallpaper ~/Pictures/wallpapers/wallpaper.jpg

  $snaparea grim -g "$(slurp)" - | tee ~/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_area.png | wl-copy -t 'image/png'
  $snapfull grim -g "$(slurp -o)" - | tee ~/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_full.png "| wl-copy -t 'image/png'
}

# Import theme colors
include themes/catppuccin-mocha

# Waybar
bar {
  swaybar_command waybar
}

# Daemons and dbus/systemd envs
exec {
  mako
  kanshi
  ~/.local/bin/import-gsettings
  /usr/lib/xfce-polkit/xfce-polkit
  wl-paste --watch cliphist -max-items 100 store
  systemctl --user import-environment WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
  dbus-update-activation-environment --systemd WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
}

# General Settings
default_orientation horizontal
font pango:$font_name $font_size
default_floating_border normal
output * bg $wallpaper fill
hide_edge_borders smart
default_border pixel 2
xwayland disable
smart_gaps off
gaps inner 5

# Idle configuration
exec swayidle -w \
	timeout 300 'swaylock -f --grace 15' \
	timeout 400 'swaymsg "output * dpms off"' \
  resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -f'

include display
include input
include modes
include app_rules
include keybinds

# vi: ft=swayconfig
