output eDP-1 {
  scale 2
  render_bit_depth 8
  adaptive_sync on
} 

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway

default_orientation horizontal
bindgesture swipe:3:right workspace prev
bindgesture swipe:3:left workspace next

exec {
  mako
  kanshi
  wl-paste --watch cliphist -max-items 100 store
}

# exec ~/.local/bin/import-gsettings

# Waybar
bar {
  swaybar_command waybar
}

# Global variables
set {
  $left h
  $right l
  $up k
  $down j

  $cursor "Catppuccin-Teal-Cursors"
  $font_name "Noto Sans"
  $font_size 12

  $mod Mod4
  $term alacritty
  $lock ~/.local/bin/sway_action
  $launcher ~/.local/bin/app_launcher
  $window_picker ~/.local/bin/window_picker
  $wallpaper ~/Pictures/wallpapers/wallpaper.jpg

  $snaparea grim -g "$(slurp)" - | tee ~/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_area.png | wl-copy -t 'image/png'
  $snapfull grim -g "$(slurp -o)" - | tee ~/Pictures/Screenshots/$(date +%Y%m%d_%Hh%Mm%Ss)_full.png "| wl-copy -t 'image/png'
}

# General Settings
font pango:$font_name $font_size
default_floating_border normal
output * bg $wallpaper fill
hide_edge_borders smart
default_border pixel 2
xwayland disable
smart_gaps off
gaps inner 5

# Cursor
seat * {
  hide_cursor when-typing enable
  hide_cursor 10000
  xcursor_theme $cursor
}

# Idle configuration
exec swayidle -w \
	timeout 300 'swaylock -f --grace 15' \
	timeout 400 'swaymsg "output * dpms off"' \
  resume 'swaymsg "output * dpms on"' \
  before-sleep 'swaylock -f'

include input
include modes
include app_rules
include keybinds

# vi: ft=swayconfig
